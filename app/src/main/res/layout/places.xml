<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlacesActivity">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="879dp"
        android:layout_marginTop="16dp"
        android:background="#FAEDED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pic05Dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/yala"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/pic5"
                    app:layout_constraintHorizontal_bias="0.477"
                    app:layout_constraintStart_toStartOf="@+id/pic5"
                    app:layout_constraintTop_toBottomOf="@+id/pic5" />

                <TextView
                    android:id="@+id/pic06Dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/Mirissa"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/pic6"
                    app:layout_constraintStart_toStartOf="@+id/pic6"
                    app:layout_constraintTop_toBottomOf="@+id/pic6" />

                <ImageView
                    android:id="@+id/heding"
                    android:layout_width="419dp"
                    android:layout_height="225dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/topbaclground" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="129dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/heding"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/heding"
                    app:layout_constraintVertical_bias="0.24"
                    app:srcCompat="@drawable/logo02" />

                <TextView
                    android:id="@+id/hedingTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="@string/Places"
                    android:textColor="#ffffff"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/heding"
                    app:layout_constraintStart_toStartOf="@+id/heding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.359" />

                <ImageView
                    android:id="@+id/pic1"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:background="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/heding"
                    app:srcCompat="@drawable/nuwara" />

                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pic1"
                    app:layout_constraintTop_toBottomOf="@+id/heding"
                    app:srcCompat="@drawable/port_city" />

                <TextView
                    android:id="@+id/pic01Dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/Sridaladamaligawa"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/pic1"
                    app:layout_constraintHorizontal_bias="0.698"
                    app:layout_constraintStart_toStartOf="@+id/pic1"
                    app:layout_constraintTop_toBottomOf="@+id/pic1" />

                <TextView
                    android:id="@+id/pic03Dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/NineArchBridge"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/pic3"
                    app:layout_constraintStart_toStartOf="@+id/pic3"
                    app:layout_constraintTop_toBottomOf="@+id/pic3" />

                <TextView
                    android:id="@+id/pic02Dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="64dp"
                    android:text="@string/portcity"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pic2" />

                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pic01Dis"
                    app:srcCompat="@drawable/nine_arches_bridge" />

                <ImageView
                    android:id="@+id/pic4"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/pic3"
                    app:layout_constraintTop_toBottomOf="@+id/pic02Dis"
                    app:srcCompat="@drawable/sigiriya" />

                <ImageView
                    android:id="@+id/pic5"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pic03Dis"
                    app:srcCompat="@drawable/yala" />

                <ImageView
                    android:id="@+id/pic6"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pic04Dis"
                    app:srcCompat="@drawable/mirisa" />

                <TextView
                    android:id="@+id/pic04Dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/Sigiriya"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/pic4"
                    app:layout_constraintStart_toStartOf="@+id/pic4"
                    app:layout_constraintTop_toBottomOf="@+id/pic4" />

                <TextView
                    android:id="@+id/serch"
                    android:layout_width="186dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:background="#FFFFFF"
                    android:hint="@string/Search"
                    android:textColorHint="@color/material_dynamic_neutral30"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/heding"
                    app:layout_constraintEnd_toEndOf="@+id/heding"
                    app:layout_constraintHorizontal_bias="0.841"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/serchicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/serch"
                    app:layout_constraintEnd_toEndOf="@+id/serch"
                    app:layout_constraintHorizontal_bias="0.925"
                    app:layout_constraintStart_toStartOf="@+id/serch"
                    app:layout_constraintTop_toTopOf="@+id/serch"
                    app:layout_constraintVertical_bias="0.692"
                    app:srcCompat="@drawable/baseline_search_24" />

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="46dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/contac"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pic05Dis"
                    app:srcCompat="@drawable/baseline_home_24" />

                <View
                    android:id="@+id/line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintBottom_toTopOf="@+id/home"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/pic05Dis" />

                <ImageView
                    android:id="@+id/contac"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home"
                    app:srcCompat="@drawable/baseline_person_24" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/contac"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pic05Dis" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>